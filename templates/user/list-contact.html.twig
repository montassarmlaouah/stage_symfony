{% extends 'base.html.twig' %}

{% block title %}Liste des Messages{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center">Liste des Messages de Contact</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Email</th>
                <th>Message</th>
                <th>Date d'envoi</th>
            </tr>
        </thead>
        <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.message }}</td>
                    <td>{{ contact.createdAt|date('d/m/Y H:i') }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun message pour l'instant.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
