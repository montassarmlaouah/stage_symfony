{% extends 'base2.html.twig' %}

{% block title %}{{ article.title }} - Détails{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row">
        <!-- Colonne pour les images avec Carousel -->
        <div class="col-md-6">
            <div id="carouselArticleImages" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for image in article.images %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img src="{{ asset('uploads/images/' ~ image.filename) }}" class="d-block w-100" alt="Image de {{ article.title }}">
                        </div>
                    {% else %}
                        <div class="carousel-item active">
                            <img src="{{ asset('assets/default-image.jpg') }}" class="d-block w-100" alt="Image par défaut">
                        </div>
                    {% endfor %}
                </div>
                <!-- Boutons pour naviguer entre les images -->
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselArticleImages" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Précédent</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselArticleImages" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Suivant</span>
                </button>
            </div>
        </div>

        <!-- Colonne pour les détails -->
        <div class="col-md-6">
            <h1>{{ article.title }}</h1>
            <p><strong>Prix :</strong> {{ article.price }} DT</p>
            <p><strong>Description :</strong> {{ article.content }}</p>
            <p><strong>Disponibilité :</strong>
                {% if article.stock > 0 %}
                    <span class="text-success">En stock</span>
                {% else %}
                    <span class="text-danger">Non disponible</span>
                {% endif %}
            </p>

            <!-- Formulaire pour ajouter au panier -->
            <form action="{{ path('panier_add', { id: article.id }) }}" method="POST">
                <div class="mb-3">
                    <label for="quantite" class="form-label"><strong>Quantité :</strong></label>
                    <input type="number" id="quantite" name="quantite" class="form-control" min="1" value="1" required>
                </div>
                <button type="submit" class="btn btn-primary">Ajouter au panier</button>
            </form>
        </div>
    </div>
    

   
</div>
{% endblock %}
